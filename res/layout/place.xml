
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	tools:context=".PlaceFragment"
        android:id="@+id/placeBaseLinearLayout"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/placeInfoBackButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:background="@color/buttondarkgrey"
                android:contentDescription="@string/desc"
                android:src="@drawable/whitebackbtn" />

            <Button
                android:id="@+id/metaforaGenericNoClickButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:text="@string/metaforaString"
                android:textColor="@color/white"
                android:background="@color/purple" />


            <Button
                android:id="@+id/placeLoadButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/purple"
            	 />
            <ProgressBar
                android:id="@+id/placeLoadBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:visibility="gone"
                android:background="@color/purple"
                android:indeterminate="true" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/placeNoInformationLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView2"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="We can't find details for the place at" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingBottom="10dp"
                android:text="We can still go there!" />

            <TextView
                android:id="@+id/placeNoInformationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignRight="@+id/textView1"
                android:layout_below="@+id/textView2"
                android:gravity="center"
                android:textStyle="bold"
                android:text="111 This is the Address Ave 95914" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/placeRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
			android:visibility="gone"

            android:background="@color/white" >
            
            <LinearLayout
	    		android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical"
	    		android:padding="10dip">
     
    		<!-- Name Label -->

    		<TextView
        		android:text="Name:"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:textStyle="bold"/>
     
    	<!--  Name Value -->

    		<TextView
    		    android:id="@+id/name"
    		    android:layout_width="fill_parent"
    		    android:layout_height="wrap_content"
    		    android:paddingBottom="15dip" />
     
		    <!-- Address Label -->
		    <TextView
		        android:text="Address:"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"/>
		     
		    <!--  Address Value -->

		    <TextView
		        android:id="@+id/address"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="12dip"
				/>
		     
		    <!-- Phone Number Label -->

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >

		        <TextView
		            android:id="@+id/phone"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingBottom="5dp"
		            android:autoLink="phone" 
    				android:linksClickable="true"
		            android:layout_weight="1" />

		        <TextView
		            android:id="@+id/website"
		            android:singleLine="true"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:linksClickable="true" />

		    </LinearLayout>
		     
		     
		    <!-- Location Value -->

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="2dp"
		        android:paddingBottom="5dp"
		         >

		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:linksClickable="true"
		            android:singleLine="true"
		            android:text="Currently:" />
		        
		        <TextView
		            android:id="@+id/placeCurrentStatus"
		            android:singleLine="true"
		            android:text="OPEN/CLOSE"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:linksClickable="true"
		            android:paddingLeft="5dp"
		            android:textStyle="bold"
		            android:textColor="@color/openred" />
		    </LinearLayout>

		    <TextView
		        android:id="@+id/reviewUserName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Reviews:"
		        android:textStyle="bold" />

		    <RatingBar
		        android:id="@+id/placeRating"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingBottom="5dp"
		        style="?android:attr/ratingBarStyleSmall" />

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical" >

		        <ListView
		            android:id="@+id/placeReviewList"
		            android:paddingTop="5dp"		            
		            android:divider="@color/exitblue"
		            android:dividerHeight="1.0dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		        </ListView>

		    </LinearLayout>
 
</LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:gravity="bottom" >

    	<Button
  	         android:id="@+id/placeGetRoutesButton"
  	           style="?android:attr/buttonBarButtonStyle"
   	          android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/purple"
                android:text="ROUTES"
                android:textColor="@color/white"
                 />
        </LinearLayout>

    </LinearLayout>
