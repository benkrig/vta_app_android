
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	tools:context=".PlaceFragment"
        android:id="@+id/placeBaseLinearLayout"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/placeInfoBackButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:background="@color/buttondarkgrey"
                android:contentDescription="@string/desc"
                android:src="@drawable/whitebackbtn" />

            <Button
                android:id="@+id/metaforaGenericNoClickButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:text="@string/metaforaString"
                android:textColor="@color/white"
                android:background="@color/purple" />


            <Button
                android:id="@+id/placeLoadButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/purple"
            	 />
            <ProgressBar
                android:id="@+id/placeLoadBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:visibility="gone"
                android:background="@color/purple"
                android:indeterminate="true" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/placeNoInformationLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
             >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingBottom="10dp"
                android:text="We can still go there!" />

            <TextView
                android:id="@+id/placeNoInformationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/buttondarkgrey"
                android:gravity="center"
                android:text="111 This is the Address Ave 95914"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/placeNoInformationAddress"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="We can&apos;t find details for this place"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/placeRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"   
            android:visibility="gone"
            android:background="@color/white" >
            
            <LinearLayout
	    		android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:orientation="vertical"
	    		>
     
    		<!-- Name Label -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textSize="15dp"
                        android:gravity="center_horizontal"
                        android:text="(Empty)"
                        android:textColor="@color/white"
                        android:background="@color/buttondarkgrey"
					 />

                </LinearLayout>
     
    	<!--  Name Value -->
     
		    <!-- Address Label -->

    		<LinearLayout
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:orientation="horizontal" >

    			<TextView
    			    android:id="@+id/address"
    			    android:layout_width="0dp"
    			    android:layout_height="wrap_content"
    			    android:gravity="center_horizontal"
    			    android:layout_weight="4"
    			    android:paddingBottom="12dip"
    			    android:text="(Empty)" 
    			    android:textColor="@color/white"
    			    android:textSize="12sp"
    			    android:background="@color/buttondarkgrey"
    			    />

    		</LinearLayout>
		     
		    <!--  Address Value -->
		     
		    <!-- Phone Number Label -->

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:background="@color/buttondarkgrey" >

		        <TextView
		            android:id="@+id/website"
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="6.15"
		            android:linksClickable="true"
		            android:textSize="13sp"
		            android:textColor="@color/white"
		            android:textColorLink="@color/white"
		            android:paddingBottom="5dp"
		            android:paddingLeft="5dp"
		            android:paddingTop="5dp"
		            android:singleLine="true"
		            android:text="(empty)" />

		        <TextView
		            android:id="@+id/phone"
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="4.30"
		            android:autoLink="phone"
		            android:textSize="13sp"
		            android:textColor="@color/white"
		            android:textColorLink="@color/white"
		            android:linksClickable="true"
		            android:paddingLeft="5dp"
		            android:text="(empty)" />

		    </LinearLayout>
		     
		     
		    <!-- Location Value -->

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/buttondarkgrey"
		        android:padding="5dp"
		         >

		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:linksClickable="true"
		            android:singleLine="true"
		            android:text="Currently:"
        			android:textColor="@color/white"
		             />
		        
		        <TextView
		            android:id="@+id/placeCurrentStatus"
		            android:singleLine="true"
		            android:text="OPEN/CLOSE"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:linksClickable="true"
		            android:paddingLeft="5dp"
		            android:textStyle="bold"
		            android:textColor="@color/closedgrey" />
		    </LinearLayout>

		    <TextView
		        android:id="@+id/reviewUserName"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="5dp"
		        android:text="Reviews:"
		        android:textColor="@color/white"
		        android:textStyle="bold"
		        android:background="@color/buttondarkgrey" />

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		       	android:orientation="horizontal"
		       	android:background="@color/buttondarkgrey" >

		        <LinearLayout
		            android:layout_width="4dp"
		            android:layout_height="match_parent" >
		        </LinearLayout>

		        <RatingBar
		            android:id="@+id/placeRating"
		            android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		style="?android:attr/ratingBarStyleSmall"
            		android:numStars="5"
            		android:stepSize="0.1"
            		android:isIndicator="true"
            		android:paddingBottom="7dp"
					 />

		        <TextView
		            android:id="@+id/placeNumberOfRatings"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="5dp"
		            android:text="(empty)"
		            android:textSize="12sp"
		            android:textColor="@color/white" />

		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical"
		        android:background="@color/closedgrey"
		        android:padding="5dp"
		         >

		        <ListView
		            android:id="@+id/placeReviewList"
		            android:divider="@color/purple"
		            android:dividerHeight="1.0dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		        </ListView>

		    </LinearLayout>
 
</LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:gravity="bottom" >

    	<Button
  	         android:id="@+id/placeGetRoutesButton"
  	           style="?android:attr/buttonBarButtonStyle"
   	          android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/purple"
                android:text="ROUTES"
                android:textColor="@color/white"
                 />
        </LinearLayout>

    </LinearLayout>
