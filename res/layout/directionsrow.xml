<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/closedgrey"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/transitTextDirectionsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" >

        <ImageView
            android:id="@+id/vehicleTypeImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/bus" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           	android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/directionsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walk to here and there ave sam ose"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/transitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="this bus will be here at 2:11pm" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           	android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/directionsDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dist: 5.0mi"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/directionsRowTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 mins"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>