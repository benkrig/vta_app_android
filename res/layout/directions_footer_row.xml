<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare: "
                android:textColor="@color/purple" />

            <TextView
                android:id="@+id/directionsFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FARE"
                android:textColor="@color/buttondarkgrey"
				 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip time: "
                android:textColor="@color/purple" />

            <TextView
                android:id="@+id/directionsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL TIME"
                android:textColor="@color/buttondarkgrey"
                 />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total distance: "
            android:textColor="@color/purple" />

        <TextView
            android:id="@+id/directionsDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL DISTANCE"
            android:textColor="@color/buttondarkgrey"
             />

    </LinearLayout>

   	<TextView
   	    android:id="@+id/directionsLocation"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:text="FROM TO HERE"
   	    android:textColor="@color/buttondarkgrey"
   	     />

</LinearLayout>