
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	tools:context=".LocationSearchFragment"
        android:id="@+id/linearLayout1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <fragment
                android:id="@+id/mainmap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/nearbyMenuButton"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:src="@drawable/ic_action_overflow"
                    android:text="Button" />

                <AutoCompleteTextView
                    android:id="@+id/searchBar"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:background="@color/textdirectionsgrey"
                    android:ems="10"
                    android:hint="@string/search_field"
                    android:imeOptions="actionDone"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="5dp"
                    android:text="@string/searchBarText"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/clearSearchBarButton"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:background="@color/textdirectionsgrey"
                    android:gravity="center"
                    android:text="x"
                    android:textColor="@color/exitblue" />

                <ImageButton
                    android:id="@+id/routeMenuButton"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:src="@drawable/ic_action_search" />

                <ProgressBar
                    android:id="@+id/locationSearchProgressBar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:indeterminate="true"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/touchLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000" >

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>